<Window x:Class="ConfigManagerStend.AddNewStand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigManagerStend"
        mc:Ignorable="d"
        Title="Добавить новый стенд" Height="170" Width="440" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10,10,10,5" >
            <!-- Поле для выбора Стенда -->
            <Label Content="Путь до папки Стенда:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="BrowseStandTextBox" Width="350" IsReadOnly="True"/>
                <Button Content="Обзор..." Margin="5,0,0,0" Padding="2" Click="BrowseStand_Click"/>
            </StackPanel>
            <Button x:Name="addStandBtn" IsEnabled="False" Width="200" Height="30" Content="Добавить" 
                            Click="addStandBtn_Click"  Margin="0,10,0,0"/>
            <Label x:Name="ResultLabel"/>
        </StackPanel>
    </Grid>
</Window>
